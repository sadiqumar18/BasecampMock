<!DOCTYPE html>
<html>
  <head>
    <title>BasecampMock</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,300;1,300&family=Secular+One&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag 'favicon.ico' %>
  </head>

  <body>
    <%= render "shared/header" %>
    <% if notice.present? %>
      <div class="alert-container">
        <p class="notification"><%= notice %></p>
      </div>
    <% end %>
    <% if alert.present? %>
      <div class="alert-container">
        <p class="notification"><%= alert %></p>
      </div>
    <% end %>
    <div class="content-container">
      <%= yield %>
    </div>
  </body>
</html>
